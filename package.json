{
  "name": "charged-particles",
  "version": "0.4.1",
  "keywords": [
    "ethereum",
    "nft",
    "non-fungible",
    "defi"
  ],
  "engines": {
    "node": ">=12.16.1",
    "npm": ">=6.14.4"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules && rm -f yarn.lock && yarn clean && yarn",
    "clean": "rm -rf build cache",
    "clean-test": "rm -rf build cache test-results.xml",
    "compile": "buidler --show-stack-traces --max-memory 8192 compile",
    "test": "buidler test",
    "start": "buidler node --port 8545",
    "coverage": "yarn clean-test && buidler compile && buidler coverage --network coverage --temp build; rm -rf cache",
    "gas": "REPORT_GAS=true buidler test --network local",
    "deploy-local": "buidler run --network local scripts/deployment.js",
    "deploy-kovan": "./deploy.sh -n kovan",
    "deploy-ropsten": "./deploy.sh -n ropsten",
    "deploy-mainnet": "./deploy.sh -n mainnet",
    "gen-docs": "solidity-docgen -i contracts -o docs"
  },
  "dependencies": {
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.5",
    "@nomiclabs/buidler-ethers": "^1.3.4",
    "@nomiclabs/buidler-etherscan": "^1.3.3",
    "@nomiclabs/buidler-waffle": "^1.3.5",
    "@opengsn/gsn": "^0.9.0",
    "@openzeppelin/cli": "^2.8.0",
    "@openzeppelin/contracts-ethereum-package": "^3.0.0",
    "@openzeppelin/upgrades": "^2.8.0",
    "@resolver-engine/core": "^0.3.3",
    "@truffle/hdwallet-provider": "^1.0.34",
    "buidler-gas-reporter": "^0.1.3",
    "chai": "^4.2.0",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "dotenv": "^8.0.0",
    "eslint": "^7.0.0",
    "eslint-plugin-jest": "^23.10.0",
    "ethereum-waffle": "^2.3.0",
    "ethers": "^4.0.27",
    "ganache-cli": "^6.9.0",
    "husky": "^4.2.5",
    "lodash": "^4.17.15",
    "openzeppelin-solidity": "^2.4.0",
    "oz-console": "^2.0.1",
    "solc": "0.6.4",
    "solidity-coverage": "^0.7.4",
    "solidity-docgen": "^0.5.3"
  }
}
